<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/hud_frame">
    <LinearLayout style="@style/hud_header">
        <TextView
            style="@style/hud_header_text"
            android:id="@+id/header_text"
            />
    </LinearLayout>
    <RelativeLayout style="@style/hud_pane">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/hud_action_text_pad"
            style="@style/hud_autosize_message"
            android:id="@+id/message_text"
            />
    </RelativeLayout>
</LinearLayout>
