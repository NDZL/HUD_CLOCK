<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:ns1="http://schemas.android.com/tools">
    <color name="charcoal_grey">#333e47</color>
    <color name="darker_grey">#777777</color>
    <color name="hud_action_text">@color/zebra_yellow</color>
    <color name="hud_back">@android:color/black</color>
    <color name="hud_clock_border">@android:color/black</color>
    <color name="hud_clock_text">@android:color/black</color>
    <color name="hud_default_frame">@color/zebra_yellow</color>
    <color name="hud_detail_text">@color/white_three</color>
    <color name="hud_header_text">@color/charcoal_grey</color>
    <color name="white_three">#f5f5f5</color>
    <color name="zebra_blue">#0077a0</color>
    <color name="zebra_green">#00b400</color>
    <color name="zebra_greyish">#a6a6a6</color>
    <color name="zebra_red">#ed1c24</color>
    <color name="zebra_white2">#d7d7d7</color>
    <color name="zebra_yellow">#ffd200</color>
    <dimen name="hud_action_height">120dp</dimen>
    <dimen name="hud_action_icon">64dp</dimen>
    <dimen name="hud_action_pad_top">10dp</dimen>
    <dimen name="hud_action_text_pad">30dp</dimen>
    <dimen name="hud_action_textsize">52sp</dimen>
    <dimen name="hud_border">4dp</dimen>
    <dimen name="hud_cart_pad">15dp</dimen>
    <dimen name="hud_countstring_maxsize">150sp</dimen>
    <dimen name="hud_detail_textsize">52sp</dimen>
    <dimen name="hud_header_height">64dp</dimen>
    <dimen name="hud_header_icon">48dp</dimen>
    <dimen name="hud_header_icon_pad">12dp</dimen>
    <dimen name="hud_header_textsize">48sp</dimen>
    <dimen name="hud_height75_margin">50dp</dimen>
    <dimen name="hud_height80_margin">40dp</dimen>
    <dimen name="hud_height85_margin">30dp</dimen>
    <dimen name="hud_height90_margin">20dp</dimen>
    <dimen name="hud_height95_margin">10dp</dimen>
    <dimen name="hud_message_maxsize">100sp</dimen>
    <dimen name="hud_midword_maxsize">44sp</dimen>
    <dimen name="hud_text_granularity">4sp</dimen>
    <dimen name="hud_width75_margin">80dp</dimen>
    <dimen name="hud_width80_margin">64dp</dimen>
    <dimen name="hud_width85_margin">48dp</dimen>
    <dimen name="hud_width90_margin">32dp</dimen>
    <dimen name="hud_width95_margin">16dp</dimen>
    <integer name="hud_resize_fudge_factor">4</integer>
    <integer name="hud_resize_max">100</integer>
    <integer name="hud_resize_min">50</integer>
    <string name="app_name">Zebra HUD Service</string>
    <string name="interruption_action">Check Terminal</string>
    <string name="interruption_text">App interrupted?</string>
    <style name="hud_action">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/hud_action_height</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">@dimen/hud_action_pad_top</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="hud_action_icon">
        <item name="android:layout_width">@dimen/hud_action_icon</item>
        <item name="android:layout_height">@dimen/hud_action_icon</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
    </style>
    <style name="hud_action_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/hud_action_text_pad</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/hud_action_text</item>
        <item name="android:textSize">@dimen/hud_action_textsize</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="hud_autosize_base">
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:breakStrategy" ns1:targetApi="m">simple</item>
    </style>
    <style name="hud_autosize_count" parent="hud_autosize_base">
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/hud_action_text</item>
        <item name="autoSizeMaxTextSize">@dimen/hud_countstring_maxsize</item>
    </style>
    <style name="hud_autosize_message" parent="hud_autosize_base">
        <item name="android:textColor">@color/hud_detail_text</item>
        <item name="autoSizeMaxTextSize">@dimen/hud_message_maxsize</item>
    </style>
    <style name="hud_autosize_singleline" parent="hud_autosize_base">
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/hud_detail_text</item>
    </style>
    <style name="hud_autosize_text" parent="hud_autosize_base">
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/hud_detail_text</item>
        <item name="autoSizeMaxTextSize">@dimen/hud_midword_maxsize</item>
    </style>
    <style name="hud_autosize_title" parent="hud_autosize_base">
        <item name="autoSizeStepGranularity">@dimen/hud_text_granularity</item>
    </style>
    <style name="hud_detail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="hud_detail_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/hud_detail_text</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="hud_frame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/hud_default_frame</item>
        <item name="android:padding">@dimen/hud_border</item>
    </style>
    <style name="hud_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/hud_header_height</item>
        <item name="android:layout_marginBottom">@dimen/hud_border</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="hud_header_icon">
        <item name="android:layout_width">@dimen/hud_header_icon</item>
        <item name="android:layout_height">@dimen/hud_header_icon</item>
        <item name="android:layout_margin">@dimen/hud_header_icon_pad</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
    </style>
    <style name="hud_header_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/hud_header_text</item>
        <item name="android:textSize">@dimen/hud_header_textsize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="hud_pane">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/hud_back</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/hud_cart_pad</item>
        <item name="android:paddingRight">@dimen/hud_cart_pad</item>
    </style>
</resources>